<div class="card border-0 shadow-sm rounded-4 overflow-hidden">
  <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
    <h4 class="fw-bold text-dark mb-1">Student Information</h4>
    <p class="text-muted small">Please fill in the details to update the student record.</p>
  </div>

  <div class="card-body p-4">
    <%= form_with(model: @student, local: true) do |form| %>
      <% if @student.errors.any? %>
        <div class="alert alert-danger border-0 shadow-sm rounded-3">
          <div class="d-flex">
            <div>
              <h6 class="alert-heading fw-bold mb-1"><%= pluralize(@student.errors.count, "error") %> detected:</h6>
              <ul class="mb-0 small">
                <% @student.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>

      <div class="row g-3">
        <div class="col-md-6">
          <%= form.label :name, class: "form-label fw-semibold small text-uppercase text-muted" %>
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-person"></i></span>
            <%= form.text_field :name, class: "form-control bg-light border-start-0 ps-0", placeholder: "Enter Your Name" %>
          </div>
        </div>

        <div class="col-md-6">
          <%= form.label :roll_number, class: "form-label fw-semibold small text-uppercase text-muted" %>
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-hash"></i></span>
            <%= form.text_field :roll_number, class: "form-control bg-light border-start-0 ps-0", placeholder: "Roll No." %>
          </div>
        </div>

        <div class="col-md-12">
          <%= form.label :email, class: "form-label fw-semibold small text-uppercase text-muted" %>
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-envelope"></i></span>
            <%= form.email_field :email, class: "form-control bg-light border-start-0 ps-0", placeholder: "email@school.com" %>
          </div>
        </div>

        <div class="col-md-6">
          <%= form.label :class_name, "Class", class: "form-label fw-semibold small text-uppercase text-muted" %>
          <%= form.text_field :class_name, class: "form-control bg-light", placeholder: "Section" %>
        </div>

        <div class="col-md-6">
          <%= form.label :status, class: "form-label fw-semibold small text-uppercase text-muted" %>
          <%= form.select :status, ["Active", "Inactive", "Graduated"], { include_blank: "Select Status" }, { class: "form-select bg-light" } %>
        </div>

        <div class="col-md-6">
          <%= form.label :enrollment_date, class: "form-label fw-semibold small text-uppercase text-muted" %>
          <%= form.date_field :enrollment_date, class: "form-control bg-light" %>
        </div>
      </div>

      <div class="mt-5 d-flex align-items-center justify-content-between border-top pt-4">
        <%= link_to students_path, class: "btn btn-link text-decoration-none text-muted p-0" do %>
          <i class="bi bi-arrow-left me-1"></i> Back to List
        <% end %>
        
        <div>
          <%= link_to "Cancel", students_path, class: "btn btn-light px-4 me-2 rounded-3" %>
          <%= form.submit "Save Student Details", class: "btn btn-primary px-4 rounded-3 fw-bold shadow-sm" %>
        </div>
      </div>
    <% end %>
  </div>
</div>