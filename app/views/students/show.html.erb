<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
      <div class="d-flex align-items-center mb-4">
        <%= link_to students_path, class: "btn btn-link text-decoration-none ps-0" do %>
          <i class="bi bi-arrow-left"></i> Back to List
        <% end %>
      </div>

      <div class="card shadow border-0 overflow-hidden">
        <div class="card-header bg-primary text-white py-4 px-5">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h2 class="h4 mb-1 fw-bold"><%= @student.name %></h2>
            </div>
            <span class="badge rounded-pill <%= @student.status == 'Active' ? 'bg-success text-white' : 'bg-warning text-dark' %> px-3 py-2">
              <%= @student.status %>
            </span>
          </div>
        </div>
        <div class="card-body p-5">
          <div class="row g-4">
            <div class="col-sm-6">
              <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Full Name</label>
              <p class="fs-5 mb-0"><%= @student.name %></p>
            </div>
             <div class="col-sm-6">
              <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Roll Number</label>
              <p class="fs-5 mb-0"><%= @student.roll_number %></p>
            </div>
            <div class="col-sm-6">
              <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Email Address</label>
              <p class="fs-6 mb-0 text-primary"><%= @student.email %></p>
            </div>
            <div class="col-sm-6">
              <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Class / Grade</label>
              <p class="fs-5 mb-0"><%= @student.class_name %></p>
            </div>
            <div class="col-sm-6">
              <label class="text-muted small text-uppercase fw-bold mb-1 d-block">Enrollment Date</label>
              <p class="fs-5 mb-0"><%= @student.enrollment_date %></p>
            </div>
          </div>
        </div>
        <div class="card-footer bg-light py-3 px-5 text-muted small">
          Last updated: <%= @student.updated_at.strftime("%B %d, %Y %I:%M %p") %>
        </div>
      </div>
    </div>
  </div>
</div>