<h1 class="my-4 text-center">User Details</h1>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h2 class="h4"><%= @user.username %></h2>
      
      <p><strong>Email:</strong> <%= @user.email %></p>
      
      <p>
        <strong>Role:</strong>
        <% if @user.admin? %>
          <span class="badge bg-danger">Admin</span>
        <% else %>
          <span class="badge bg-secondary">User</span>
        <% end %>
      </p>
      
      <p><strong>Created At:</strong> <%= @user.created_at.strftime("%B %d, %Y") %></p>
      
      <div class="mt-4">
        <%= link_to "Back to Users List", users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>