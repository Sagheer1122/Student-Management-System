<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      
      <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
        <div class="card-body p-4 p-md-5">
          <div class="text-center mb-4">
            <h2 class="fw-bold text-dark">Account Settings</h2>
            <p class="text-muted small">Update your profile information below</p>
          </div>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-floating mb-3">
              <%= f.text_field :username, autofocus: true, class: "form-control border-0 bg-light", placeholder: "Username" %>
              <%= f.label :username %>
            </div>

            <div class="form-floating mb-3">
              <%= f.email_field :email, autocomplete: "email", class: "form-control border-0 bg-light", placeholder: "name@example.com" %>
              <%= f.label :email %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning border-0 small py-2">
                <i class="bi bi-info-circle me-1"></i> Pending confirmation: <b><%= resource.unconfirmed_email %></b>
              </div>
            <% end %>

            <div class="form-floating mb-3">
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-0 bg-light", placeholder: "Current Password" %>
              <%= f.label :current_password %>
            </div>

            <hr class="my-4 text-secondary opacity-25">

            <div class="mb-3">
              <label class="form-label fw-semibold mb-1">New Password</label>
              <div class="form-floating mb-3">
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-0 bg-light", placeholder: "New Password" %>
                <%= f.label :password, "New Password" %>
              </div>
              
              <div class="form-floating">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-0 bg-light", placeholder: "Confirm New Password" %>
                <%= f.label :password_confirmation, "Confirm New Password" %>
              </div>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Save Changes", class: "btn btn-primary btn-lg rounded-3 shadow-sm fw-bold" %>
              <%= link_to "Cancel", :back, class: "btn btn-link text-decoration-none text-muted" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>